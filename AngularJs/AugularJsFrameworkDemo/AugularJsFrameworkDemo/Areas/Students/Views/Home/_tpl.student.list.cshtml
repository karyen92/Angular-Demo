<script type="text/ng-template" id="tpl.student.list">
    <div class="col-md-12">
        <div class="col-md-12">
            <button class="btn btn-default" ui-sref="add">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
            </button>
            <md-button class="md-raised md-primary" ui-sref="material">
                <span class="glyphicon glyphicon-gift" aria-hidden="true"></span> Material
            </md-button>
        </div>
        <div class="col-md-12 pre-scrollable">
            <table class="table">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Courses</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="student in displayCollection">
                        <td>{{ student.studentId }}</td>
                        <td>{{ student.name }}</td>
                        <td>{{ student.class }}</td>
                        <td>
                            <div ng-repeat="course in student.courses">
                                <dl>
                                    <dt>{{ course }}</dt>
                                </dl>
                            </div>
                        </td>
                        <td><button class="btn btn-success" ng-click="edit(student.id)">Edit</button></td>
                        <td><button class="btn btn-danger" ng-click="remove(student.id)">Delete</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</script>